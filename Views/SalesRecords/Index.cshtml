@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div>
        <form class="form-inline" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="minDate" class="navbar-text mr-sm-2">Min Date:</label>
                    <input type="date" name="minDate" class="form-control mr-sm-2" />
                    <label for="maxDate" class="navbar-text mr-sm-2">Max Date:</label>
                    <input type="date" name="maxDate" class="form-control mr-sm-2" />

                    <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
